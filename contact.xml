<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
     >

        <TextView
            android:id="@+id/here_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="25dip"
            android:layout_marginBottom="50dip"
            android:layout_marginTop="100dip"
            android:text="Voici votre liste de contacts"
            />
        <ListView
            android:id="@+id/listSexe"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:choiceMode="singleChoice" >
        </ListView>


        <TextView
            android:id="@+id/textProg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Quel(s) langage(s) maîtrisez-vous :" />


        <ListView
            android:id="@+id/listProg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:choiceMode="multipleChoice" >
        </ListView>

        <Button
            android:id="@+id/add_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Créer un contact"
            android:layout_marginLeft="25dip"
            android:layout_marginTop="25dip"
            android:layout_marginRight="25dip"
            />
    </LinearLayout>
</LinearLayout>
